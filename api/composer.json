{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3.0",
        "ext-json": "^1.5",
        "ext-mbstring": "^7.3",
        "doctrine/migrations": "^1.8",
        "doctrine/orm": "^2.7",
        "laminas/laminas-diactoros": "^2.3",
        "psr/http-server-handler": "^1.0",
        "ramsey/uuid": "^4.1",
        "slim/slim": "^3.11",
        "symfony/console": "^4.1",
        "symfony/dotenv": "5.1.3",
        "symfony/validator": "^4.1",
        "zendframework/zend-config-aggregator": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "app": "php bin/app.php --ansi",
        "test": "phpunit --colors=always tests"
    }
}
