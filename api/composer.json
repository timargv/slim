{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3.0",
        "ext-json": "^1.5",
        "psr/http-server-handler": "^1.0",
        "slim/slim": "^3.11",
        "symfony/dotenv": "5.1.3",
        "zendframework/zend-diactoros": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always tests"
    }
}
